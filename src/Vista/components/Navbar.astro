---
import ThemeToggle from "./ThemeToggle.astro";

const links = [
  { name: "Inicio", path: "/Elmundodelcondon" },
  { name: "Gráfico", path: "/imagenes" },
  { name: "Multimedia", path: "/multimedia" },
  { name: "Información", path: "/informacion" },
  { name: "Listas", path: "/listas" },
  { name: "Formulario", path: "/formulario" },
  { name: "Chat", path: "/chat" },
];
---

<nav class="sticky top-0 z-50 backdrop-blur bg-white/30 dark:bg-gray-900/30 shadow-md px-4 py-3 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
  <!-- Logo + Título -->
  <div class="flex items-center gap-3">
    <img src="/logo.jpeg" alt="Logo" class="h-10 w-10 rounded-full" />
    <span class="text-2xl font-bold text-pink-600 dark:text-pink-300">
      El Mundo del Condón
    </span>
  </div>

  <!-- Navegación + Toggle -->
  <div class="flex flex-wrap gap-5 items-center justify-center sm:justify-end">
    {links.map((link) => (
      <a href={link.path} class="text-xl font-semibold hover:text-pink-500 dark:hover:text-pink-300 transition-colors">
        {link.name}
      </a>
    ))}
    <ThemeToggle />
  </div>
</nav>